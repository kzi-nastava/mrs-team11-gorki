<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/formStyle">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/linkedPassengers"
        style="@style/formTitle" />

    <View
        android:layout_width="320dp"
        android:layout_height="2dp"
        android:layout_marginVertical="8dp"
        android:background="@color/purple" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/firstLinkedPassengerInput"
        android:text="@string/linkedPassengersLabel"
        style="@style/formLabel"/>

    <EditText
        android:id="@+id/firstLinkedPassengerInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="textWebEmailAddress"
        android:autofillHints="emailAddress"
        style="@style/formInput" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/secondLinkedPassengerInput"
        android:text="@string/linkedPassengersLabel"
        style="@style/formLabel"/>

    <EditText
        android:id="@+id/secondLinkedPassengerInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="textWebEmailAddress"
        android:autofillHints="emailAddress"
        style="@style/formInput" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/thirdLinkedPassengerInput"
        android:text="@string/linkedPassengersLabel"
        style="@style/formLabel"/>

    <EditText
        android:id="@+id/thirdLinkedPassengerInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="textWebEmailAddress"
        android:autofillHints="emailAddress"
        style="@style/formInput" />

    <Button
        android:id="@+id/doneLinkButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/done"
        style="@style/formButton" />

</LinearLayout>