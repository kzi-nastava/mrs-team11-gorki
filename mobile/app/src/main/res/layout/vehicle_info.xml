<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/container_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/formStyleInScroll">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vehicleInformation"
            style="@style/formTitle" />

        <View
            android:layout_width="320dp"
            android:layout_height="2dp"
            android:layout_marginVertical="8dp"
            android:background="@color/purple" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/modelInput"
            android:text="@string/model"
            style="@style/formLabel"/>

        <EditText
            android:id="@+id/modelInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="text"
            android:autofillHints="none"
            style="@style/formInput" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/licensePlateInput"
            android:text="@string/licensePlate"
            style="@style/formLabel"/>

        <EditText
            android:id="@+id/licensePlateInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="text"
            android:autofillHints="none"
            style="@style/formInput" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/seatsInput"
            android:text="@string/numberOfSeats"
            style="@style/formLabel"/>

        <EditText
            android:id="@+id/seatsInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="number"
            android:autofillHints="none"
            style="@style/formInput" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/type"
            style="@style/formLabel"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Choose"
            style="@style/formDropdownLayout">

            <AutoCompleteTextView
                android:id="@+id/vehicleTypeDropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/babyTransport"
            style="@style/formLabel"/>

        <RadioGroup
            android:id="@+id/babyTransport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <RadioButton
                android:id="@+id/yesBabyTransport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yes"
                style="@style/formRadioButton"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <RadioButton
                android:id="@+id/noBabyTransport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no"
                android:checked="true"
                style="@style/formRadioButton"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/petFriendly"
            style="@style/formLabel"/>

        <RadioGroup
            android:id="@+id/petFriendly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <RadioButton
                android:id="@+id/yesPetFriendly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yes"
                style="@style/formRadioButton"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <RadioButton
                android:id="@+id/noPetFriendly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no"
                android:checked="true"
                style="@style/formRadioButton"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </RadioGroup>

        <Button
            android:id="@+id/saveChangesButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/saveChanges"
            style="@style/formButton" />

        <Button
            android:id="@+id/revertChangesButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/revertChanges"
            style="@style/revertChangesButton" />

    </LinearLayout>
</ScrollView>
