<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/navbar"
        android:layout_width="411dp"
        android:layout_height="77dp"
        android:background="@color/custom"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="021Ride"
        app:titleTextAppearance="@style/ToolbarTitleStyle"
        app:titleTextColor="@android:color/white" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dontHaveAcc"
        android:textAppearance="@style/navLabelColor"
        android:textColor="@color/white"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="32dp" />


    <Button
        android:id="@+id/register"
        android:layout_width="87dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:text="@string/register"
        android:textAppearance="@style/buttonBold"
        android:textColor="@color/custom"
        android:textSize="9sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.669"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="42dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginStart="6dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/register"
        app:layout_constraintStart_toEndOf="@id/register"
        app:layout_constraintTop_toTopOf="@id/register"
        app:layout_constraintVertical_bias="0.368" />

    <Button
        android:id="@+id/login"
        android:layout_width="87dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:text="@string/login"
        android:textAppearance="@style/buttonBold"
        android:textColor="@color/custom"
        android:textSize="9sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.978"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/rideCard"
        android:layout_width="204dp"
        android:layout_height="145dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/navbar">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="165dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="@string/cardQuestion"
                android:textColor="#3E2E8C"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="136dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#3E2E8C"
                android:text="@string/cardButtonText"
                android:textColor="@android:color/white"
                android:textAppearance="@style/buttonBold"
                android:textSize="9sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>