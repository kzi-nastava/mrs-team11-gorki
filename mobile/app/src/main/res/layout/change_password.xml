<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/formStyle">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/changePasswordText"
        style="@style/formTitle" />

    <View
        android:layout_width="320dp"
        android:layout_height="2dp"
        android:layout_marginVertical="8dp"
        android:background="@color/purple" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/currentPasswordInput"
        android:text="@string/currentPassword"
        style="@style/formLabel"/>

    <EditText
        android:id="@+id/currentPasswordInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="textPassword"
        android:autofillHints="password"
        style="@style/formInput" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/newPasswordInput"
        android:text="@string/newPassword"
        style="@style/formLabel"/>

    <EditText
        android:id="@+id/newPasswordInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="textPassword"
        android:autofillHints="password"
        style="@style/formInput" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/confirmNewPasswordInput"
        android:text="@string/confirmNewPassword"
        style="@style/formLabel"/>

    <EditText
        android:id="@+id/confirmNewPasswordInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="textPassword"
        android:autofillHints="password"
        style="@style/formInput" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/done"
        style="@style/formButton" />

</LinearLayout>