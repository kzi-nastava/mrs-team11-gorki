<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.UnuserHomeFragment">

    <!-- MAPA -->
    <org.osmdroid.views.MapView
        android:id="@+id/osmMap"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- ESTIMATE PANEL PREKO MAPE -->
    <LinearLayout
        android:id="@+id/estimatePanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@android:color/white">

        <EditText
            android:id="@+id/startingAddress"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="textPostalAddress"
            android:hint="@string/startingAddressHint"
            android:autofillHints="postalAddress"
            style="@style/formInput"/>

        <EditText
            android:id="@+id/destinationAddress"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="textPostalAddress"
            android:hint="@string/destinationAddressHint"
            android:autofillHints="postalAddress"
            style="@style/formInput"/>

        <Button
            android:id="@+id/btnEstimate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/estimate"
            style="@style/formButton"/>

    </LinearLayout>

</FrameLayout>