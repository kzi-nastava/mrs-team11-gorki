<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_driver_history"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".DriverHistoryActivity"
    tools:ignore="ExtraText">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/navbar"
        android:layout_width="411dp"
        android:layout_height="77dp"
        android:background="@color/custom"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="021Ride"
        app:titleTextAppearance="@style/ToolbarTitleStyle"
        app:titleTextColor="@android:color/white" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="96dp"
        android:text="@string/dateLabel"
        android:textAppearance="@style/labelBold"
        android:textColor="@color/custom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fromDatePicker"
        android:layout_width="155dp"
        android:layout_height="20dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/date_picker_style"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:text="@string/fromDate"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/toDatePicker"
        android:layout_width="155dp"
        android:layout_height="20dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="124dp"
        android:background="@drawable/date_picker_style"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="@string/toDate"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/horizontalDivider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toDatePicker" /><![CDATA[
    " />
    ]]>
    <TextView
        android:id="@+id/sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="188dp"
        android:text="Sorting criteria"
        android:textAppearance="@style/labelBold"
        android:textColor="@color/custom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/choose"
        android:layout_width="155dp"
        android:layout_height="20dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="188dp"
        android:background="@drawable/date_picker_style"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="@string/choseCriteria"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/choose2"
        android:layout_width="155dp"
        android:layout_height="20dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="216dp"
        android:background="@drawable/date_picker_style"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="@string/choseCriteria"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/order"
        android:layout_width="67dp"
        android:layout_height="19dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="216dp"
        android:text="@string/orderText"
        android:textAppearance="@style/labelBold"
        android:textColor="@color/custom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="282dp"
        android:layout_height="348dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="280dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/divider"
        app:strokeWidth="1dp">


        <!-- KARTICA -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="16dp">

            <!-- Ride title -->
            <TextView
                android:id="@+id/tvRideTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cardTitle"
                android:textColor="@color/custom"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Rating -->
            <RatingBar
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="4.5"
                android:stepSize="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvRideTitle" />

            <!-- Divider -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginVertical="8dp"
                android:background="@color/divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ratingBar" />

            <!-- Ride info -->
            <TextView
                android:id="@+id/tvRideInfo"
                android:layout_width="244dp"
                android:layout_height="102dp"
                android:layout_marginTop="20dp"
                android:text="@string/rideInfo"
                android:textColor="@color/custom"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ratingBar" />

            <View
                android:id="@+id/divider1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:background="@color/divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvRideInfo" />

            <TextView
                android:id="@+id/tvRideInfo2"
                android:layout_width="249dp"
                android:layout_height="64dp"
                android:layout_marginTop="12dp"
                android:text="@string/rideInfo2"
                android:textColor="@color/custom"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider1" />

            <Button
                android:id="@+id/btnMoreInfo"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginTop="96dp"
                android:backgroundTint="@color/custom"
                android:text="MORE INFO"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvRideInfo"
                tools:ignore="HardcodedText" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


    <ImageButton
        android:id="@+id/leftArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:contentDescription="Left arrow"
        android:rotation="90"
        app:layout_constraintEnd_toStartOf="@id/tvRideInfo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/arrow_down_float"
        tools:ignore="MissingConstraints,NotSibling,TouchTargetSizeCheck"
        tools:layout_editor_absoluteY="435dp" />

    <ImageButton
        android:id="@+id/rightArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="90"
        app:srcCompat="@android:drawable/arrow_up_float"
        tools:ignore="ContentDescription,MissingConstraints,SpeakableTextPresentCheck,TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="346dp"
        tools:layout_editor_absoluteY="435dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="119dp"
        android:layout_height="26dp"
        android:background="@color/white"
        android:entries="@array/ride_status"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints,TextSizeCheck,TouchTargetSizeCheck"
        tools:layout_editor_absoluteY="27dp" />


</androidx.constraintlayout.widget.ConstraintLayout>