<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/cardStyle">
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rideCardTitle"
        style="@style/formTitle" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/four"
            style="@style/cardLabel"/>

    </LinearLayout>

    <View
        android:layout_width="320dp"
        android:layout_height="2dp"
        android:layout_marginVertical="16dp"
        android:background="@color/purple" />

    <TextView
        android:id="@+id/txtStartingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/startingTime"
        style="@style/cardLabel"
        android:fontFamily="SofiaSansCondensed"/>

    <TextView
        android:id="@+id/txtEndingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/endingTime"
        style="@style/cardLabel"
        android:fontFamily="SofiaSansCondensed"/>

    <TextView
        android:id="@+id/txtStartingPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/startingPoint"
        style="@style/cardLabel"
        android:fontFamily="SofiaSansCondensed"/>

    <TextView
        android:id="@+id/txtDestination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/destination"
        style="@style/cardLabel"
        android:fontFamily="SofiaSansCondensed"/>

    <View
        android:layout_width="320dp"
        android:layout_height="2dp"
        android:layout_marginVertical="16dp"
        android:background="@color/purple" />

    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price"
        style="@style/cardLabel"
        android:fontFamily="SofiaSansCondensed"/>

    <TextView
        android:id="@+id/txtCancelled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancelled"
        style="@style/cardLabel"
        android:fontFamily="SofiaSansCondensed"/>

    <TextView
        android:id="@+id/txtPanic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/panicActivated"
        style="@style/cardLabel"
        android:fontFamily="SofiaSansCondensed"/>

    <Button
        android:id="@+id/btnMoreInfo"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/moreInfo"
        style="@style/cardButton"
        android:fontFamily="SofiaSansCondensed"/>

    <Button
        android:id="@+id/btnCancelRide"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/cancelRide"
        style="@style/cardButton"
        android:fontFamily="SofiaSansCondensed"
         />

</LinearLayout>