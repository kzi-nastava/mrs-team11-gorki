<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/formStyle">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stoppingPoints"
        style="@style/formTitle" />

    <View
        android:layout_width="320dp"
        android:layout_height="2dp"
        android:layout_marginVertical="8dp"
        android:background="@color/purple" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/firstStoppingPointInput"
        android:text="@string/stoppingPointLabel"
        style="@style/formLabel"/>

    <EditText
        android:id="@+id/firstStoppingPointInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="textPostalAddress"
        android:autofillHints="postalAddress"
        style="@style/formInput" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/secondStoppingPointInput"
        android:text="@string/stoppingPointLabel"
        style="@style/formLabel"/>

    <EditText
        android:id="@+id/secondStoppingPointInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="textPostalAddress"
        android:autofillHints="postalAddress"
        style="@style/formInput" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/thirdStoppingPointInput"
        android:text="@string/stoppingPointLabel"
        style="@style/formLabel"/>

    <EditText
        android:id="@+id/thirdStoppingPointInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="textPostalAddress"
        android:autofillHints="postalAddress"
        style="@style/formInput" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/fourthStoppingPointInput"
        android:text="@string/stoppingPointLabel"
        style="@style/formLabel"/>

    <EditText
        android:id="@+id/fourthStoppingPointInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="textPostalAddress"
        android:autofillHints="postalAddress"
        style="@style/formInput" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/fifthStoppingPointInput"
        android:text="@string/stoppingPointLabel"
        style="@style/formLabel"/>

    <EditText
        android:id="@+id/fifthStoppingPointInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="textPostalAddress"
        android:autofillHints="postalAddress"
        style="@style/formInput" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/sixthStoppingPointInput"
        android:text="@string/stoppingPointLabel"
        style="@style/formLabel"/>

    <EditText
        android:id="@+id/sixthStoppingPointInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="textPostalAddress"
        android:autofillHints="postalAddress"
        style="@style/formInput" />

    <Button
        android:id="@+id/doneStopButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/done"
        style="@style/formButton" />

</LinearLayout>