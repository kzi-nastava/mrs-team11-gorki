<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Bottom panel -->
    <LinearLayout
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/tvStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start: -"
            android:fontFamily="@font/sofia_sans_condensed_semibold"
            />

        <TextView
            android:id="@+id/tvEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End: -"
            android:fontFamily="@font/sofia_sans_condensed_semibold"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/tvEta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ETA: -"
            android:fontFamily="@font/sofia_sans_condensed_regular"
            android:layout_marginTop="6dp"/>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cbPaid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paid in vehicle"
            android:fontFamily="@font/sofia_sans_condensed_regular"
            android:checked="true"
            android:layout_marginTop="10dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFinishRide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Finish ride"
            android:fontFamily="@font/sofia_sans_condensed_semibold"
            android:layout_marginTop="12dp"
            app:cornerRadius="14dp"/>

    </LinearLayout>

</FrameLayout>