<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
>

        <!-- SEARCH CARD -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="3dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ride monitor"
                    android:fontFamily="SofiaSansCondensed"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:endIconMode="clear_text"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etQuery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter driver full name"
                        android:fontFamily="SofiaSansCondensed"
                        android:inputType="textPersonName"/>
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFindDriver"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Find driver"
                        android:fontFamily="SofiaSansCondensed"
                        app:icon="@drawable/baseline_attribution_24"
                        app:iconPadding="8dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFindActiveRide"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:text="Active ride"
                        android:fontFamily="SofiaSansCondensed"
                        app:icon="@drawable/outline_assistant_direction_24"
                        app:iconPadding="8dp"/>
                </LinearLayout>

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- DRIVER CARD -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardDriver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="3dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Driver"
                    android:fontFamily="SofiaSansCondensed"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/tvDriverName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="SofiaSansCondensed"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvDriverEmail"
                    android:layout_width="match_parent"
                    android:fontFamily="SofiaSansCondensed"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tvDriverVehicle"
                    android:layout_width="match_parent"
                    android:fontFamily="SofiaSansCondensed"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/tvDriverActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="SofiaSansCondensed"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- RIDE CARD -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardRide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="3dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvRideTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ride"
                        android:fontFamily="SofiaSansCondensed"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="SofiaSansCondensed"
                        android:text="STATUS"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvTimes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="SofiaSansCondensed"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="match_parent"
                    android:fontFamily="SofiaSansCondensed"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:id="@+id/tvPanic"
                    android:layout_width="match_parent"
                    android:fontFamily="SofiaSansCondensed"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ROUTE CARD -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardRoute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="3dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Route"
                    android:fontFamily="SofiaSansCondensed"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/tvStart"
                    android:layout_width="match_parent"
                    android:fontFamily="SofiaSansCondensed"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="SofiaSansCondensed"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:id="@+id/tvDistanceEta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="SofiaSansCondensed"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/tvCurrentLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="SofiaSansCondensed"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
